hostname {{ lab["nodes"][node]["hostname"] }}
!
{%- if "xrv" in lab["nodes"][node]["platform"] %}
cdp
lldp subinterfaces enable
{%- endif %}
{%- if "ios" in lab["nodes"][node]["platform"] %}
ipv6 unicast-routing
lldp run
{%- endif %}
{%- for iface in ifaces %}
!
interface {{ iface[2] }}
 {%- if "xrv" in lab["nodes"][node]["platform"] %}
 {%- if "lo" not in iface[2] %}
 cdp
 {%- endif %}
 {%- if iface[3] %}
 ipv4 address {{ iface[3] }}
 {%- endif %}
 {%- endif %}
 {%- if "ios" in lab["nodes"][node]["platform"] %}
 {%- if "lo" not in iface[1] %}
 lldp enable
 {%- endif %}
 {%- if iface[3] %}
 ip address {{ iface[3] }}
 {%- endif %}
 {%- endif %}
 {%- if iface[4] %}
 ipv6 address {{ iface[4] }}
 {%- endif %}
 no shutdown
exit
{%- endfor %}
